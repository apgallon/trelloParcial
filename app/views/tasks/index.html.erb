<h1>Listing tasks</h1>
<h2>Not Finished</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Initialdate</th>
      <th>Duration</th>
      <th>Finaldate</th>
      <th>User</th>
      <th>Finished</th>
      <th>Responsible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <%if task.finished == false%>
    
      <tr>
        <td><%= task.title %></td>
        <td><%= task.initialdate %></td>
        <td><%= task.duration %></td>
        <td><%= task.finaldate %></td>
        <td><%= task.user.fullname %></td>
        <td><%= task.finished %></td>
        <td><%= task.responsible.fullname %></td>
        <td><%= link_to 'Show', task %></td>
        <% if user_signed_in? %>
        <%if task.user.id==current_user.id%>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        <%end%>
      </tr>
 
      <%end%>
    <% end %>
  </tbody>
</table>

<h2>Finished</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Initialdate</th>
      <th>Duration</th>
      <th>Finaldate</th>
      <th>User</th>
      <th>Finished</th>
      <th>Responsible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <%if task.finished == true%>
  
      <tr>
        <td><%= task.title %></td>
        <td><%= task.initialdate %></td>
        <td><%= task.duration %></td>
        <td><%= task.finaldate %></td>
        <td><%= task.user.fullname %></td>
        <td><%= task.finished %></td>
        <td><%= task.responsible %></td>
        <td><%= link_to t('Show'), task %></td>
        <td><%= link_to t('Edit'), edit_task_path(task) %></td>
        <%if task.user.id==current_user.id%>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    
      <%end%>
    <% end %>
  </tbody>
</table>

<br>
<%if user_signed_in? %>
<%= link_to t('New Task'), new_task_path %>
<%end%>
