<p id="notice"><%= notice %></p>
<h1>Listing tasks</h1>
<h2>Author of</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <%if task.user_id == current_user.id%>
    
      <tr>
       
        <td><%= link_to task.title, task %></td>
        
      </tr>
 
      <%end%>
    <% end %>
  </tbody>
</table>
<h2>Responsible of</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <%if task.finished == true%>
  
      <tr>
        
        <td><%= link_to task.title, task %></td>
        <td><%= link_to t('Edit'), edit_task_path(task) %></td>
        <%if task.user.id==current_user.id%>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    
      <%end%>
    <% end %>
  </tbody>
</table>

<br>
<%if user_signed_in? %>
<%= link_to t('New Task'), new_task_path %>
<%end%>
